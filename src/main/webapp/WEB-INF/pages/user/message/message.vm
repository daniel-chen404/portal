<div class="main">
    <div class="warpper">
        #parse("common/lefter.vm")
        <div class="boxRight">
            <p class="messageTitle">在线留言</p>
            <section class="article-content clearfix article-page">
                <form action="$ctx/message/create" method="post" class="messageForm">
                    <p><span class="form_name">内容主题：</span><input type="text" value="" name="title"></p>
                    <p><span class="form_name">联 系 人：</span><input type="text" value="" name="customer"></p>
                    <p><span class="form_name">单位名称：</span><input type="text" value="" name="company"></p>
                    <p><span class="form_name">通迅地址：</span><input type="text" value="" name="address"></p>
                    <p><span class="form_name">电话：</span><input type="text" value="" name="phone"></p>
                    <p><span class="form_name">手机：</span><input type="text" value="" name="mobile"></p>
                    <p><span class="form_name">传真：</span><input type="text" value="" name="fax"></p>
                    <p><span class="form_name">E-mail：</span><input type="text" value="" name="email"></p>
                    <p><span class="form_name">反馈内容：</span><textarea value="" rows="5" name="content"></textarea></p>

                    <p class="messageBtn">
                        <button type="submit" id="myButton" class="btn btn-block btn-primary">提交</button>
                        <button type="reset" id="myButton" class="btn btn-default">取消</button>
                    </p>

                </form>
            </section>
        </div>
    </div>
</div>